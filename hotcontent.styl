.section
  margin-bottom 30px
  padding 10px 0
  min-height 200px
  a
    color #37a
    text-decoration: none
  .wrapper
    margin 0 auto
    width 950px
    .side
      float right
      width 265px
      margin-left 30px
      height 50px
      .img-a
        width 100%
        height 100%
        display inline-block
        .img-ad
          background-color: blue;
      .online
        .mod
          margin-bottom 30px
          h2
            font-size: 15px
            display inline-block
            color: #072
            margin 0 0 12px 0
            line-height 150%
            .pl
              font-size 12px
              line-height 150%
              color: #666
              a
                color #37a  
          .rec_topics
            margin 10px 0 15px 0
            color #999
            line-height 1
            .rec_topics_name
              display block
              margin-bottom 6px
              // text-decoration: none
              font-size 14px
              line-height 1.3
              color #37a
            .rec_topics_subtitle
              font-size 13px
              color #aaa 
              margin-bottom 15px
              line-height 1
              
          .rec_topics:last-child
            margin-bottom 0  


    .main
      // background-color pink
      height 50px
      .mod
        margin-bottom 30px
        h2
          font-size 15px
          color #072
          margin: 0 0 12px 0
          .pl
            font-size 14px
            line-height 150%
            color #666
            a
              color #37a
              font-size 12px
              // text-decoration: none
        .albums
          float left
          width 350px
          margin-right 30px
          color #999
          font-size 0
          letter-spacing: -0.31em
          ul
            margin -10px 0 0 -10px
            li  
              display inline-block
              width 170px
              margin 10px 0 0 10px
              zoom 1
              letter-spacing normal
              word-spacing normal
              vertical-align top
              font-size 12px
              .pic
                width 170px
                zoom 1
                display inline-block
                vertical-align middle
                min-height 170px
                overflow hidden
                white-space nowrap
                a
                  cursor pointer
                  img
                    width 170px
                    border-width none
                    vertical-align middle
              a
                // text-decoration none
                color #669
                cursor pointer
              .num
                cursor pointer
        .notes
          overflow hidden
          zoom 1
          ul
            li
              margin-top 12px
              word-wrap break-word
              a
                font-size 12px

            .first
              margin-top 0
              .author
                color #999
                font-size 12px
              p
                font-size 12px
                color #666










            


